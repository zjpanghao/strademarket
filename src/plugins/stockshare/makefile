# Please tweak it to suit your environment and project.  You
# may want to move it to your project's root directory.
#
# SYNOPSIS:
#
#   make [all]  makes everything.
#   make TARGET makes the given target.
#   make clean  removes all files generated by make.


# Where to find user code.

LIB_DIR = ./../../../../mylib
USER_DIR = ./../../pub
CORE_DIR = ./../../../../basecore
SO_DIR = ./../../bin/plugins
STOCKSVC = ./../../plugins
ARITHMETIC = $(USER_DIR)/arithmetic

THIRD_PATH = $(LIB_DIR)/public

CUSTOM_THIRD_PATH = $(LIB_DIR)/third_party

LINK_PATHS = -L./ -L/usr/local/libmemcached-1.0.7/lib/  -L/usr/lib64 -L/usr/lib64/mysql

# Flags passed to the preprocessor.
#CPPFLAGS += -isystem -shared -fPIC -DDB_POOL_ -DUSR_LOG_MSG -DPROCESS_WORK
CPPFLAGS += -isystem -shared -fPIC -DDB_POOL_  -D_KUN_DB_POOL  -D_DEBUG -DUSR_LOG_MSG -DPROCESS_WORK

# Flags passed to the C++ compiler.
CXXFLAGS += -g  -Wextra -pthread -shared -fPIC -Wl,-soname,libstockshare.so.1.0

# All tests produced by this Makefile.  Remember to add new tests you
# created to the list.
PLUGIN = $(SO_DIR)/../stockshare/libstockshare.so.1.0
                
INCLUDE_PATHS = -I/usr/local/libmemcached-1.0.7/include \
				-I/usr/local/libmemcached/include\
				-I/usr/local/freetds/include\
				-I$(LIB_DIR)\
				-I$(CORE_DIR)\
				-I$(THIRD_PATH)\
				-I/usr/local/include\
				-I/usr/include/mysql\
				-I$(USER_DIR)\
				-I$(CUSTOM_THIRD_PATH)/hiredis\
				-I$(CUSTOM_THIRD_PATH)\
				-I$(LIB_DIR)/base\
				-I$(BASE_DIR)\
				-I$(LIB_DIR)/public\
				-I$(STOCKSVC)\
				-I$(LIB_DIR)/third_party/hiredis\
				-I$(LIB_DIR)/third_party\
				-I$(ARITHMETIC)\
        -I$(USER_DIR)/sqldbpool\
				-I$(USER_DIR)/baseconfig\

# House-keeping build targets.

ALL_HEADERS = $(USER_HEADERS)
all : $(PLUGIN) delete-temp-file

clean :
	rm -f $(PLUGIN)  *.o

delete-temp-file:
	-rm -f ./*.o

base_config.o : ${USER_DIR}/baseconfig/base_config.cc ${USER_DIR}/baseconfig/base_config.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ${USER_DIR}/baseconfig/base_config.cc $(INCLUDE_PATHS)

mysql_db_pool.o : ${USER_DIR}/sqldbpool/mysql_db_pool.cc ${USER_DIR}/sqldbpool/mysql_db_pool.h 
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ${USER_DIR}/sqldbpool/mysql_db_pool.cc $(INCLUDE_PATHS)

stockshare_init.o : ./stockshare_init.cc ./stockshare_init.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./stockshare_init.cc $(INCLUDE_PATHS) 

stockshare_engine.o : ./stockshare_engine.cc ./stockshare_engine.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./stockshare_engine.cc $(INCLUDE_PATHS)
	
db_mysql.o : ./db_mysql.cc ./db_mysql.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./db_mysql.cc $(INCLUDE_PATHS)
		
stock_base_info.o : ./stock_base_info.cc ./stock_base_info.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c ./stock_base_info.cc $(INCLUDE_PATHS)
		
	
tea.o:$(ARITHMETIC)/tea/tea.cc $(ARITHMETIC)/tea/tea.h
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(ARITHMETIC)/tea/tea.cc $(INCLUDE_PATHS)
	
mig_log.o: $(THIRD_PATH)/log/mig_log.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(THIRD_PATH)/log/mig_log.cc $(INCLUDE_PATHS)
	
basictypes.o: $(THIRD_PATH)/basic/basictypes.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(THIRD_PATH)/basic/basictypes.cc $(INCLUDE_PATHS)
	
basic_util.o: $(THIRD_PATH)/basic/basic_util.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(THIRD_PATH)/basic/basic_util.cc $(INCLUDE_PATHS)
	
config.o: $(THIRD_PATH)/config/config.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(THIRD_PATH)/config/config.cc $(INCLUDE_PATHS)
	
md5sum.o:$(THIRD_PATH)/basic/md5sum.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(THIRD_PATH)/basic/md5sum.cc $(INCLUDE_PATHS)

radom_in.o:$(THIRD_PATH)/basic/radom_in.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(THIRD_PATH)/basic/radom_in.cc $(INCLUDE_PATHS)

$(PLUGIN) : stockshare_engine.o  db_mysql.o \
	mig_log.o basictypes.o \
	 basic_util.o config.o  \
	base_config.o mysql_db_pool.o \
	basic_util.o \
	md5sum.o radom_in.o  stock_base_info.o \
	$(CUSTOM_THIRD_PATH)/dmg_fp/lib/dmg_fp.a $(LIB_DIR)/base/lib/mybase.a $(LIB_DIR)/third_party/lib/libhiredis.a
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(LINK_PATHS) -lpthread -lexpat -lrt -lpthread -ldl  -lmysqlclient -lcurl \
	$^ -o $@
	ln -sf libstockshare.so.1.0 $(SO_DIR)/../stockshare/libstockshare.so
